<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="TicketingSystem" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>domain.Address</class>
    <class>domain.Ticket</class>
    <class>domain.Comment</class>
    <class>domain.Attachment</class>
    <class>domain.Contact</class>
    <class>domain.Contract</class>
    <class>domain.ContractType</class>
    <class>domain.TicketCreationType</class>
    <class>domain.TicketType</class>
    <class>domain.ApplicationUser</class>
    <class>domain.ApplicationUserRole</class>
    <class>domain.UserLoginAttempt</class>
    <class>domain.Client</class>
    <class>domain.AspNetUserRoles</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1434;DatabaseName=TicketingSystem"/>
      <property name="javax.persistence.jdbc.user" value="TicketingSystem"></property>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="javax.persistence.jdbc.password" value="TicketingSystem"/>
      <property name="javax.persistence.schema-generation.database.action" value="Create"/>
    </properties>
  </persistence-unit>
</persistence>
