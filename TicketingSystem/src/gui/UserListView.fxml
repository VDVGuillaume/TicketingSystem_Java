<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<fx:root minHeight="500.0" minWidth="900.0" type="Pane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <children>
            <TableView fx:id="tblViewUsers" minHeight="600.0" minWidth="950.0" onMouseClicked="#editClient">
              <columns>
                <TableColumn fx:id="tblColUsername" prefWidth="75.0" text="Gebruikersnaam" />
                <TableColumn fx:id="tblColFirstName" prefWidth="75.0" text="Voornaam" />
                <TableColumn fx:id="tblColName" prefWidth="75.0" text="Naam" />
                <TableColumn fx:id="tblColEmail" prefWidth="75.0" text="Email" />
                <TableColumn fx:id="tblColStatus" prefWidth="75.0" text="Status" />
                <TableColumn fx:id="tblColCompany" prefWidth="75.0" text="Bedrijf" />
              </columns>
            </TableView>
            <HBox>
               <children>
                  <Button fx:id="btnCreateUser" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#createUser" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #004087;" text="Nieuwe gebruiker" textFill="WHITE" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</fx:root>
